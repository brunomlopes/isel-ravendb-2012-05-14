@model Demo2_WebApp.Models.ViewModels.HomeSearchViewModel

@{
}

<h2>Searching for "@Model.Query"</h2>

<ul>
@foreach (var task in Model.Tasks)
{
    <li><strong>@task.Name</strong> - @if (task.Done)
                                      { <text>✓</text> }
                                      else
                                      {
                                          <text>☐</text>
                                      } ( @task.OwnerName )</li>
}
</ul>
<p>
    @Model.TotalResults results found.
</p>

@using Demo2_WebApp.Infrastructure
@model Demo2_WebApp.Models.ViewModels.ProjectIndexViewModel

@{
    ViewBag.Title = "Projectos";
}


<h2>@Model.Projects.Count() projectos de @Model.TotalResults:</h2>

@foreach(var vm in Model.Projects)
{
    <div>
        <a href="@Url.Action("Details", new {id = vm.ProjectId.IntFromId()})"><strong>@vm.ProjectName</strong> </a> com <em>@vm.NumberOfActivities</em> actividades.
    </div>
}
<p>
    @if(@Model.Page > 1){
        <a href="@Url.Action("Index", new { page = @Model.Page - 1 })">< previous page </a>
    }
    <a href="@Url.Action("Index", new { page = @Model.Page + 1 })">next page ></a>
</p>
